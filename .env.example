# Database
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/hiv_tracker_db
TEST_DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/hiv_tracker_test_db

# Security
SECRET_KEY=your-super-secret-key-here-make-it-very-long-and-random
